
function dglSrcDir() {
    local file="CMakeCache.txt"
    if [ ! -e "$file" ]; then
        echo "Error! Not inside dgl cmake build folder!!" 1>&2
        return 1
    fi
    local cppDir=`grep DGL_SOURCE_DIR "$file" | sed -e 's/.*=//'`
    dirname $cppDir
}

function dglCmakeCommand() {
    time cmake \
         -DUSE_CUDA=ON \
         $* \
         ../../dgl
}

function dglCppBuild() {
    time make -j $*
}

